<Page x:Class="Logistics.WayBill"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Logistics"
      mc:Ignorable="d" 
      d:DesignHeight="740" d:DesignWidth="1000"
      Title="Страница создания накладной">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Margin="10">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="15">Особые отметки груза</TextBlock>
                <TextBox Grid.Row="0" Grid.Column="1" TextWrapping="Wrap" Margin="5" />
                <TextBlock Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="15">Номер заявки</TextBlock>
                <TextBox Grid.Row="1" Grid.Column="1" TextWrapping="Wrap" Margin="5"/>
                <TextBlock Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="15">Дата</TextBlock>
                <DatePicker Grid.Row="2" Grid.Column="1" Margin="5"/>
                <TextBlock Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="15">Номер визы</TextBlock>
                <TextBox Grid.Row="3" Grid.Column="1" TextWrapping="Wrap" Margin="5"/>
                <TextBlock Grid.Row="4" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="15">Скорость</TextBlock>
                <TextBox Grid.Row="4" Grid.Column="1" TextWrapping="Wrap" Margin="5"/>
                <TextBlock Grid.Row="5" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="15">Станция отправления</TextBlock>
                <ComboBox Grid.Row="5" Grid.Column="1" Margin="5"/>
                <TextBlock Grid.Row="6" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="15">Станция назначения</TextBlock>
                <ComboBox Grid.Row="6" Grid.Column="1" Margin="5"/>
                <TextBlock Grid.Row="7" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="15">Грузоотправитель</TextBlock>
                <ComboBox Grid.Row="7" Grid.Column="1" Margin="5"/>
                <TextBlock Grid.Row="8" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="15">Грузополучатель</TextBlock>
                <ComboBox Grid.Row="8" Grid.Column="1" Margin="5"/>
                <TextBlock Grid.Row="9" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="15">Плательщик</TextBlock>
                <ComboBox Grid.Row="9" Grid.Column="1" Margin="5"/>
                <TextBlock Grid.Row="10" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="15">Наименование груза</TextBlock>
                <ComboBox Grid.Row="10" Grid.Column="1" Margin="5"/>
                <TextBlock Grid.Row="11" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="15">Масса</TextBlock>
                <TextBox Grid.Row="11" Grid.Column="1" TextWrapping="Wrap" Margin="5"/>
                <TextBlock Grid.Row="12" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="15">Номер состава</TextBlock>
                <ComboBox Grid.Row="12" Grid.Column="1" Margin="5"/>

            </Grid>
            <Button Margin="0 10 0 0">Сформировать</Button>
            <Button Margin="0 10" Width="175" HorizontalAlignment="Left" VerticalAlignment="Center">Импорт в Word</Button>
        </StackPanel>

    </Grid>
</Page>
