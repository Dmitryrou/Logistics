<Page x:Class="Logistics.CreateTrain"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Logistics"
      mc:Ignorable="d" 
      Loaded="Page_Loaded"
      d:DesignHeight="740" d:DesignWidth="1000"
      Title="Создание поезда">

    <Grid Background="White">
        <StackPanel Margin="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBox Margin="5" Grid.Row="1" Grid.Column="1" Name="tbx_name"></TextBox>
                <Button Grid.Column = "2" Margin="5" Grid.Row="1" Click="Button_Click_Add">Добавить</Button>
                <TextBlock Margin="5" Grid.Row="1" HorizontalAlignment="Center">Введите название поезда</TextBlock>
            </Grid>
            <Button Grid.Column = "0" Margin="5" Grid.Row="2" Click="Button_Click_Del">Удалить выбранный вагон</Button>
            <Grid Margin="10">
                <DataGrid x:Name="dg_Train">

                </DataGrid>
            </Grid>
        </StackPanel>
    </Grid>
</Page>
