<Page x:Class="Logistics.CreateOfSostav"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Logistics"
      mc:Ignorable="d" 
      d:DesignHeight="740" d:DesignWidth="1000"
      Title="Создание составов">

    <Grid Background="White">
        <StackPanel Margin="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <ComboBox Margin="5" Grid.Row="1"></ComboBox>
                <TextBox Grid.Column = "1" Margin="5" Grid.Row="1"></TextBox>
                <Button Grid.Column = "2" Margin="5" Grid.Row="1">Добавить</Button>
                <TextBlock Margin="5">Выберите вагон</TextBlock>
                <TextBlock Grid.Column = "1" Margin="5">Введите номер состава</TextBlock>
            </Grid>
            <Button Grid.Column = "0" Margin="5" Grid.Row="2">Удалить выбранный вагон</Button>
            <TextBlock Margin="5">Выберите номер состава</TextBlock>
            <ComboBox Margin="5" Grid.Row="1"></ComboBox>
            <Button Grid.Column = "4" Margin="5">Обновить список</Button>
        </StackPanel>
    </Grid>
</Page>
