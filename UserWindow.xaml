<Window x:Class="Logistics.UserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Logistics"
        mc:Ignorable="d"
        Title="Главная страница" Width="1360" Height="768" >
    <Grid>
        <StackPanel>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1290"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button HorizontalAlignment="Right" Grid.Column="1" Click="Button_Click_Exit">Выйти</Button>
                <TextBlock HorizontalAlignment="Right" FontSize="14" Grid.Column="0">FIO</TextBlock>
            </Grid>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Margin="15">
                    <Button Name="btn_storage" Content="Склад" Margin="15" Click="btn_storage_Click"/>
                    <Button Name="btn_Report" Content="Список отчетов" Margin="15"/>
                    <Button Name="btn_waybill" Content="Создание накладной" Margin="15"/>
                    <Button Name="btn_acceptance" Content="Приемка вагонов" Margin="15"/>
                    <Button Name="btn_loading" Content="Погрузка вагонов" Margin="15"/>
                    <Button Name="btn_sost" Content="Создание составов" Margin="15"/>
                    <Button Name="btn_dispatch" Content="Отправка составов" Margin="15"/>
                    <Button Name="btn_copy" Content="Резервное копирование" Margin="15"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Margin="10">
                    <Frame Name="frm_HomePage" Height="700" Width="1000" Margin="5"/>
                </StackPanel>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
